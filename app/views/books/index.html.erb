<h1>Books</h1>
<% @books.each do |book| %>

  <span>
  <%= link_to book.title, book_path(book.id) %>
  </span>

  <span>
  <%= link_to book.body, book_path(book.id) %>
  </span>


<span>
  <%= link_to 'Show', book_path(book.id) %>
</span>
<span>
  <%= link_to 'Edit', edit_book_path(book.id) %>
</span>
<span>
<%= link_to 'Destroy', book_path(book.id),method: :delete, "data-confirm"=>"Are you sureï¼Ÿ" %>
</span>
<% end %>





<h1>New book</h1>
<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <br><%= f.submit 'Create Book' %>
<% end %>